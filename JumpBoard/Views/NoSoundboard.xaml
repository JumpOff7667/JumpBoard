<Page x:Class="JumpBoard.NoSoundboard"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:JumpBoard"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="NoSoundboard">

    <Grid>
        <TextBlock x:Name="InstructionTextBlock" HorizontalAlignment="Center" Margin="0,148,0,0" Text="Add a new soundboard" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="36"/>
        <Button x:Name="BrowseButton" Content="Browse" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="22" Width="176" Margin="0,225,0,0" Click="BrowseButton_Click"/>

    </Grid>
</Page>

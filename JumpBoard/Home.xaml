<Page x:Class="JumpBoard.Example"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:JumpBoard"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Example">

    <Grid>
        <ListView x:Name="SoundboardsListView" Margin="0,0,555,0">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <TextBlock x:Name="EmptyListViewTextBlock" HorizontalAlignment="Left" Margin="448,173,0,0" Text="Add a new directory" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="20" Visibility="Hidden"/>
        <Button x:Name="AddDirectoryButton" Content="Browse" HorizontalAlignment="Left" Margin="448,225,0,0" VerticalAlignment="Top" Width="178" Visibility="Hidden"/>
    </Grid>
</Page>
